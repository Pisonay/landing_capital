---
interface Props {
  pdfUrl?: string;
  fileName?: string;
  variant?: 'premium' | 'minimal' | 'card' | 'compact' | 'badge';
}

const { 
  pdfUrl = "/pdf/brochure_capital.pdf",
  fileName = "brochure_capital.pdf",
  variant = "premium"
} = Astro.props;
---

{variant === 'premium' && (
  <div class="relative group max-w-md mt-10">
    <div class="relative overflow-hidden rounded-2xl bg-white p-[2px] shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
      <a 
        target="_blank" 
        href={pdfUrl}
        download={fileName}
        class="relative flex items-center gap-4 px-6 sm:px-8 py-4 sm:py-5 bg-secondary-green rounded-2xl overflow-hidden group/btn"
      >
        <div class="absolute inset-0 bg-secondary-green opacity-0 group-hover/btn:opacity-100 animate-shimmer transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex-shrink-0 w-12 h-12 sm:w-14 sm:h-14 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center group-hover/btn:bg-white/30 transition-all duration-300 group-hover/btn:scale-110 group-hover/btn:rotate-12">
          <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>

        <div class="relative z-10 flex-1">
          <p class="text-xs sm:text-sm font-semibold text-white/90 uppercase tracking-wider mb-1">
            Descarga Gratis
          </p>
          <h3 class="text-base sm:text-lg lg:text-xl font-bold text-white leading-tight">
            Brochure Capital
          </h3>
          <p class="text-xs sm:text-sm text-white/80 mt-1">
            PDF - Información completa
          </p>
        </div>

        <div class="relative z-10 flex-shrink-0 text-white opacity-80 group-hover/btn:opacity-100 group-hover/btn:translate-x-1 transition-all duration-300">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </div>
      </a>
    </div>
    <div class="absolute -inset-1 bg-gradient-to-r from-teal-400 to-cyan-500 rounded-2xl blur-lg opacity-0 group-hover:opacity-30 transition-opacity duration-500 -z-10"></div>
  </div>
)}

{variant === 'minimal' && (
  <div class="relative group max-w-sm">
    <a 
      target="_blank" 
      href={pdfUrl}
      download={fileName}
      class="flex items-center justify-between px-6 py-4 bg-white border-2 border-teal-500 rounded-xl hover:bg-teal-50 transition-all duration-300 hover:shadow-lg hover:border-teal-600 hover:-translate-y-1"
    >
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 w-12 h-12 bg-teal-500 rounded-lg flex items-center justify-center group-hover:bg-teal-600 transition-colors duration-300">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <h3 class="text-base font-bold text-gray-900">Brochure Capital</h3>
          <p class="text-sm text-gray-600">Descargar PDF</p>
        </div>
      </div>
      <svg class="w-5 h-5 text-teal-600 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
      </svg>
    </a>
  </div>
)}

{variant === 'card' && (
  <div class="relative group max-w-xs">
    <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 hover:border-teal-400">
      <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-teal-500 to-cyan-600 rounded-xl mb-4 group-hover:scale-110 transition-transform duration-300">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">Brochure Capital</h3>
      <p class="text-sm text-gray-600 mb-4">Descarga nuestro brochure completo con toda la información</p>
      <a 
        target="_blank" 
        href={pdfUrl}
        download={fileName}
        class="inline-flex items-center justify-center w-full px-4 py-3 bg-gradient-to-r from-teal-500 to-cyan-600 text-white font-semibold rounded-xl hover:from-teal-600 hover:to-cyan-700 transition-all duration-300 hover:shadow-lg"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Descargar PDF
      </a>
    </div>
  </div>
)}

{variant === 'compact' && (
  <a 
    target="_blank" 
    href={pdfUrl}
    download={fileName}
    class="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-teal-600 to-cyan-600 text-white font-semibold rounded-full hover:from-teal-700 hover:to-cyan-700 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 group"
  >
    <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors duration-300">
      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
    </div>
    <span>Descargar Brochure</span>
    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
    </svg>
  </a>
)}

{variant === 'badge' && (
  <div class="relative max-w-sm">
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden hover:shadow-2xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-teal-500 to-cyan-600 px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-teal-100 text-xs font-semibold uppercase tracking-wider">Documento</p>
            <h3 class="text-white text-xl font-bold mt-1">Brochure Capital</h3>
          </div>
          <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
      <div class="px-6 py-4">
        <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span>PDF</span>
          </div>
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>2 min lectura</span>
          </div>
        </div>
        <a 
          target="_blank" 
          href={pdfUrl}
          download={fileName}
          class="flex items-center justify-center w-full px-4 py-3 bg-gradient-to-r from-teal-500 to-cyan-600 text-white font-semibold rounded-xl hover:from-teal-600 hover:to-cyan-700 transition-all duration-300 group"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Descargar Ahora
          <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
)}

<style>
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  .animate-shimmer {
    animation: shimmer 2s infinite;
  }
</style>