---
interface Props {
  dptos: string;
  desde: string;
}

const { dptos, desde } = Astro.props;
---

<div
  class="w-full bg-red-500 text-white md:rounded-tr-4xl md:rounded-bl-4xl rounded-tr-2xl rounded-bl-2xl
         px-4 md:py-3 py-1 flex flex-col justify-center md:items-start items-center
        leading-tight font-bold uppercase tracking-tight shadow-black shadow-lg"
>
  <span class="md:text-3xl text-xl font-semibold">
    {dptos} <span class="md:text-sm text-xs font-medium">DORM.</span>
  </span>
  <span class="md:text-3xl text-xl font-semibold">
    s/{desde.split("/")[1] ? desde.split("/")[1] : desde.replace("s/", "")}
  </span>
</div>
